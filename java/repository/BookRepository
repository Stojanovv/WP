package mk.ukim.finki.wp.lab.repository;

import mk.ukim.finki.wp.lab.model.Autor;
import mk.ukim.finki.wp.lab.model.Book;

import java.util.List;

public interface BookRepository {
        List<Book> findAll();
        List<Book> searchBooks(String text, Double rating);
        Book add(String title, String genre, Double averageRating, Autor autor);
        Book update(Long id, String title, String genre, Double averageRating, Autor author);
        void delete(Long id);
}
